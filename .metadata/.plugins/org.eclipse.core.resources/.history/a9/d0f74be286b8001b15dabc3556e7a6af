package Baekjoon;

import java.util.ArrayList;
import java.util.Scanner;

public class Main {

   public static void main(String[] args) {
      Scanner sc = new Scanner(System.in);
      
      int A = sc.nextInt();
      int B = sc.nextInt();
      int C = sc.nextInt();
      int sale=0;
      int count = 0;
      
      for (sale=0; sale*C <= A+ B*sale; sale++) {
    	  count++;
      }System.out.println(count+1);
   }
}