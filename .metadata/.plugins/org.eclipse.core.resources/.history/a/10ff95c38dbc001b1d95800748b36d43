package Baekjoon;

import java.util.Scanner;

public class Main {

   public static void main(String[] args) {
      Scanner sc = new Scanner(System.in);
      int N = sc.nextInt();
      int result;
      int number = 2;
      if (N ==1) result = 1;
      else {
    	  for (int i = 0; i < N; i++) {
    		  if (N < number + (6 * i)) {
    			  result = i + 1;
    			  break;
    		  }
    	  }
      }
      System.out.println(result);
    	
     
}
}
